{
  "manifest_version": 3,
  "name": "Network Investigator",
  "version": "1.0.1",
  "description": "Advanced network traffic analysis tool for developers. Inspect HTTP requests with enhanced search and filtering capabilities.",
  "short_name": "NetInvestigator",
  "author": "Mathias",
  "homepage_url": "https://github.com/mathias612/network-investigator",
  "permissions": [
    "tabs",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "devtools_page": "devtools.html",
  "side_panel": {
    "default_path": "sidePanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Network Investigator",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 